            const type = b.primaryType;
            const name = b.name || "";
            const cuisines = b.cuisineTypes || [];
            const entertainmentTypes = b.entertainmentTypes || [];
            const artTypes = b.artTypes || [];
            const neighborhoods = b.neighborhoods || [];
