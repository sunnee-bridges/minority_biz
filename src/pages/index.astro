  <script
    is:inline
    define:vars={{
      searchData: enhanced.map((b) => ({
        name: b.name,
        slug: b.slug,
        type: b.primaryType,
        neighborhoods: b.neighborhoods || [],
        cuisines: [
          ...(b.cuisineTypes || []),
          ...(b.entertainmentTypes || []),
          ...(b.artTypes || []),
        ],
      })),
    }}
  >
    // Hero search functionality with live suggestions
    (function () {
      const heroSearch = document.getElementById("hero-search");
      const heroButton = document.querySelector(".hero__search-button");
      const suggestionsEl = document.getElementById("search-suggestions");

      // Data injected from server
      const businesses = Array.isArray(searchData) ? searchData : [];

      // Build neighborhood & cuisine sets
      const neighborhoods = new Set();
      const cuisines = new Set();

      businesses.forEach((b) => {
        (b.neighborhoods || []).forEach((n) => {
          if (n && n !== "Location TBD") neighborhoods.add(n);
        });
        (b.cuisines || []).forEach((c) => {
          if (c) cuisines.add(c);
        });
      });

      let currentFocusIndex = -1;

      function normalize(str) {
        return (str || "").toLowerCase().trim();
      }

      function handleSearch() {
        if (!heroSearch) return;
        const query = heroSearch.value.trim();
        if (query) {
          window.location.href = `/all?q=${encodeURIComponent(query)}`;
        } else {
          window.location.href = "/all";
        }
      }

      function highlightMatch(text, query) {
        if (!text || !query) return text;
        const lowerText = text.toLowerCase();
        const lowerQuery = query.toLowerCase();
        const idx = lowerText.indexOf(lowerQuery);
        if (idx === -1) return text;

        const before = text.slice(0, idx);
        const match = text.slice(idx, idx + query.length);
        const after = text.slice(idx + query.length);

        return (
          before +
          '<strong style="font-weight:700;color:var(--accent-strong);">' +
          match +
          "</strong>" +
          after
        );
      }

      function showSuggestions(query) {
        if (!suggestionsEl) return;

        if (!query || query.length < 2) {
          hideSuggestions();
          return;
        }

        const qNorm = normalize(query);
        currentFocusIndex = -1;

        // Businesses
        const matchingBusinesses = businesses
          .filter((b) => normalize(b.name).includes(qNorm))
          .slice(0, 5);

        // Cuisines
        const matchingCuisines = Array.from(cuisines)
          .filter((c) => normalize(c).includes(qNorm))
          .slice(0, 5);

        // Neighborhoods
        const matchingNeighborhoods = Array.from(neighborhoods)
          .filter((n) => normalize(n).includes(qNorm))
          .slice(0, 5);

        let html = "";

        // Businesses section
        if (matchingBusinesses.length > 0) {
  html +=
    '<div class="search-suggestions__section">' +
