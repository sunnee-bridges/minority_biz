---
import BaseLayout from "../../layouts/Base.astro";

const title = "Thanks • Denver Black-Owned Business Directory";
const description = "Thanks for reaching out. We’ll review your message soon.";
---

<BaseLayout {title} {description}>
  <div class="shell contact">
    <section class="contact-hero">
      <h1 class="contact-hero__title">Thanks!</h1>
      <p class="contact-hero__subtitle">
        Your message was sent. If a reply is needed, we’ll reach out to the email you provided.
      </p>
      <p style="margin-top:1rem;">
        <a href="/all" class="contact-side__link">Back to the directory →</a>
      </p>
    </section>
  </div>

  <style>
    /* reuse your existing look/feel hooks */
    .contact {
      padding-block: 3rem 4rem;
      display: flex;
      flex-direction: column;
      gap: 2.5rem;
    }
    .contact-hero { max-width: 48rem; margin: 0 auto 0; text-align: left; }
    .contact-hero__title { margin: 0 0 0.5rem; font-size: 2rem; line-height: 1.2; color: var(--text-main); }
    .contact-hero__subtitle { margin: 0; font-size: 1rem; line-height: 1.5; color: var(--text-muted); }
    @media (max-width: 768px) {
      .contact { padding-block: 2.25rem 3rem; }
      .contact-hero__title { font-size: 1.6rem; }
      .contact-hero__subtitle { font-size: 0.95rem; }
    }
  </style>
</BaseLayout>
