          <span class="filter-label filter-label--pill">Browse by type</span>
          <div class="filter-chips">
            <a href="/" class="chip chip--link chip--active">
              <span class="chip__icon">üè†</span>
              All
            </a>

            {allTypes.map((t) => {
              const icon = getTypeIcon(t);
              const slug = slugify(t);
              return (
                <a href={`/type/${slug}`} class="chip chip--link">
                  <span class="chip__icon">{icon}</span>
                  {t}
                </a>
              );
            })}
          </div>
        </div>

        <!-- Filter dropdowns in a grid -->
        <div class="filter-dropdowns">
          <!-- Neighborhood dropdown -->
          <div class="filter-dropdown">
            <label for="neighborhood-select" class="filter-label">
              Neighborhood
            </label>
            <select id="neighborhood-select" class="filter-select">
              <option value="">All neighborhoods</option>
              {allNeighborhoods.map((n) => (
                <option
                  value={n.toLowerCase()}
                  selected={neighborhoodFromUrl === n.toLowerCase()}
                >
                  {n}
                </option>
              ))}
            </select>
          </div>

          <!-- Cuisine/Entertainment/Art dropdown (multi-select) -->
          {allCuisines.length > 0 && (
            <div class="filter-dropdown">
              <label for="cuisine-select" class="filter-label">
                Cuisine / entertainment / art
              </label>
              <select
